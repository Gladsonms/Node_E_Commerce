<div class="row">
    <div class="container ">
    <table class="table col-md-8" style="margin-left:12em" id="table_id">

 <div class="card-header pt-5">
                                        <h4 class="card-title">All Products</h4>
                                        <button class="btn btn-primary float-right mb-3"><a href="/admin/productmanagment/adddproduct">Add products</a></button>
                                    </div>
    <thead class="">
        <tr>
            <th scope="col">Product</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
            <th scope="col">Category</th>
            <th scope="col">Sub category</th>
            <th scope="col">Image</th>
            <th scope="col">Options</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
           
            <td>{{this.product}}</td>
            <td>{{this.price}}</td>
            <td>{{this.quantity}}</td>
            <td>{{this.category}}</td>
            <td>{{this.subCategory}}</td>
            <td><img src="/product-images/product-image1/{{this._id}}.jpg" alt="image" srcset="" style="width: 50px;height: 50px;"></td>
            <td>
                                            
                                            <form  action="/admin/productmangment/deleteproduct/{{this._id}}" method="POST">
                                                <button class="btn btn-danger"  onclick="return confirm('Are you sure to delete {{this.product}} ? ')">
                                         Delete
                                        </button>
                                            </form>
                                            
                                       
                                           <a class="btn btn-warning" href="/admin/productmangmnet/editproduct/{{this._id}}" >
                                                      
                                         Edit
                                        
                                        </a>
                                       
                                       
                                               </td>
            {{!-- <td>{{this.subCategory}}</td> --}}
        </tr>
        {{/each}}
    </tbody>
</table>
</div>
</div>

<script>
    $(document).ready( function () {
    $('#table_id').DataTable();
} );
</script>