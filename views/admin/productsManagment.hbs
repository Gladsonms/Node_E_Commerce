<div class="row">
    
</div>
<div class="row">
    <div class="container ">
    <table class="table col-md-8" style="margin-left:8em" id="table_id">

 <div class="card-header pt-5">
                                        <h4 class="card-title text-center">All Products</h4>
                                        <a class="btn btn-primary float-right mb-3" href="/admin/productmanagment/adddproduct"> Add products</a>
                                    </div>
    <thead class="">
        <tr>
            <th scope="col">Product</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
            <th scope="col">Category</th>
            <th scope="col">Sub category</th>
            <th scope="col">Image</th>
            <th scope="col">Options</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
           
            <td>{{this.product}}</td>
            <td>{{this.price}}</td>
            <td>{{this.quantity}}</td>
            <td>{{this.category}}</td>
            <td>{{this.subCategory}}</td>
            <td><img src="/product-images/product-image1/{{this._id}}.jpg" alt="image" srcset="" style="width: 50px;height: 50px;"></td>
            <td>
                                            <button class="btn btn-danger" onclick="deleteProduct('{{this._id}}');">delete</button>
                                            
                                            
                                       
                                           <a class="btn btn-warning" href="/admin/productmangmnet/editproduct/{{this._id}}" >
                                                      
                                         Edit
                                        
                                        </a>
                                       
                                       
                                               </td>
            {{!-- <td>{{this.subCategory}}</td> --}}
        </tr>
        {{/each}}
    </tbody>
</table>
</div>
</div>

<script>
    $(document).ready( function () {
    $('#table_id').DataTable();
} );
  function deleteProduct(proId){
    
					Swal.fire({
  title: 'Are you sure ?',
  text: "You won't be able to revert this!",
  icon: 'warning',
  showCancelButton: true,
  confirmButtonColor: '#3085d6',
  cancelButtonColor: '#d33',
  confirmButtonText: 'Yes, delete it!'
}).then((result) => {
  if (result.isConfirmed) {
					$.ajax({
						url:'/admin/productmangment/deleteproduct',
                      
						data:{
							
							proId:proId
						},
						method:'post',
						success:(response)=>{
							if(response){
								window.location.reload()
							}
						}
					})
	
  }
  				else{


					}
				
})

				}
</script>